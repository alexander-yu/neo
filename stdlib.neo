matrix<int> iinsert_col(matrix<int> m, int n, matrix<int> a){
    check(rows(m) == rows(a), "Dimension error: attempted to insert/append column with incompatible dimensions");
    check(cols(a) == 1, "Dimension error: attempted to insert/append column with incompatible dimensions");

    auto r = rows(m);
    auto c = cols(m);
    create matrix<int> res[r][c+1];

    for (auto i = 0; i < r; i++) {
        auto j1 = 0;
        auto j2 = 0;
        while (j2 < c+1) {
            if (j2 != n){
                res[i, j2] = m[i, j1];
                j1 = j1 + 1;
            }
            else {
                res[i, j2] = a[i, 0];
            }
            j2 = j2 + 1;
        }
    }
    return res;
}

